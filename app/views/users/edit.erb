<sectio>
    <%=attachment_image_tag @user, :profle_image,size:"100x100", fallback: "no_image.png"%>
    <p>name</p>
    <p><%=@user.name%></p>
    <p>メールアドレス</p>
    <p><%=@user.email%></p>
    <p>サイト数</p>
    <p><%=@user.sites.count%></p>
    <p>お気に入り数</p>
    <p><%=@user.likes.count%></p>
</section>
<section class = "form_area">
    <%=form_for(@user) do |f| %>

        <div class = "form_item">
            <!-- <label for = "name">サイト名</label> -->
            <%=f.attachment_field :profle_image , placeholder:"プロフィール画像"%>
        </div>
        <div class = "form_item">
            <!-- <label for = "name">サイト名</label> -->
            <%=f.text_field :name , placeholder:"山田太郎"%>
        </div>
        <div class = "form_item">
            <!-- <label for = "discription">サイトの説明</label> -->
            <%=f.text_field :email, placeholder:"example@example.com" %>
        </div>
        <%=f.submit "update my profile" %>
    <% end %>
    <% if @user.errors.any? %>
        <div>
            <p><%=@user.errors.count%>件のエラーが発生しました。</p>
            <% @user.errors.full_messages.each do |message|%>
              <p><%=message%></p>
            <% end %>
        </div>
    <% end %>
    <%=link_to "back", root_path%>
</section>